@model ProductDtoForUpdate

<div class="text-center">
	<div class="display-6">Update</div>
</div>
<form method="post" action="Update" enctype="multipart/form-data">
	<div class="text-bg-danger" asp-validation-summary="All"></div>

	<input type="hidden" asp-for="Id" />

	<div class="form-group my-3">
		<label asp-for="CategoryId"></label>
		<select class="form-control" asp-for="CategoryId">
			@foreach (Category category in ViewBag.Categories)
			{
				<option value="@category.Id">@category.CategoryName</option>
			}
		</select>
	</div>


	<div class="form-group my-3">
		<label asp-for="ProductName">Product Name</label>
		<input class="form-control" asp-for="ProductName" />
	</div>

	<div class="form-group my-3">
		<label asp-for="Summary">Summary</label>
		<input class="form-control" asp-for="Summary" />
	</div>

	<div class="form-group my-3">
		<label asp-for="Price">Price</label>
		<input class="form-control" asp-for="Price" />
	</div>

	<div class="form-group my-3">
		<img class="rounded shadow" width="150" src="@Model?.ImageUrl"/>
	</div>

	<div class="form-group my-3">
		<label asp-for="ImageUrl">Image</label>
		<input class="form-control" name="file" type="file" asp-for="ImageUrl" />
	</div>

	<div class="form-group my-3">
		<div class="btn-group">
			<button class="btn btn-primary" type="submit">
				<i class="fa fa-save"></i>
				Update
			</button>
			<a asp-action="Index" class="btn btn-outline-primary">
				<i class="fa fa-list"></i>
				Products
			</a>
		</div>
	</div>
</form>